<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.paymentProcess.PaymentProcessActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/view_toolbar" />

    <TextView
        android:id="@+id/textViewSelecionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionado:"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/includeToolbar"
        app:layout_constraintStart_toStartOf="@id/cardProcessando"
        app:layout_constraintEnd_toStartOf="@id/textViewFormaPagamento"
        />

    <TextView
        android:id="@+id/textViewFormaPagamento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="@id/textViewSelecionado"
        app:layout_constraintBottom_toBottomOf="@id/textViewSelecionado"
        app:layout_constraintStart_toEndOf="@id/textViewSelecionado"
        android:text=" Debito"
        android:textColor="@color/black"
        android:textStyle="bold"
        />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardProcessando"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/laranja_primario"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSelecionado"
        app:strokeColor="@color/borda_cinza"
        app:strokeWidth="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transação Aprovada"
                android:textSize="25sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <Button
        android:layout_width="140dp"
        android:layout_height="55dp"
        android:layout_margin="20dp"
        android:text="Voltar"
        app:cornerRadius="12dp"
        app:icon="@drawable/ic_arrow_voltar"
        app:iconPadding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>